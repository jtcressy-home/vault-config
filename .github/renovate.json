{
  "packageRules": [
    {
      "matchPaths": [
        "path/to/your/textfile.txt"
      ],
      "matchStrings": [
        "VERSION_STRING"
      ],
      "versioning": "github-releases",
      "branchPrefix": "renovate/",
      "branchName": "renovate/VERSION_STRING",
      "githubRelease": {
        "repo": "my-github-username/my-github-repo"
      },
      "major": "x",
      "minor": "y",
      "patch": "z"
    }
  ],
  "schedule": {
    "interval": "daily",
    "timezone": "UTC"
  }
}
