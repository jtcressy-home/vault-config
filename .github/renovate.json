{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "matchFiles": [
    "path/to/your/textfile.txt"
  ],
  "matchStrings": [
    "VERSION_STRING"
  ],
  "versioning": {
    "major": "x",
    "minor": "y",
    "patch": "z",
    "source": "github-releases",
    "githubRelease": {
      "repo": "my-github-username/my-github-repo"
    }
  },
  "schedule": [
    {
      "interval": "daily",
      "timezone": "UTC"
    }
  ],
  "branchPrefix": "renovate/",
  "branchName": "renovate/VERSION_STRING"
}

