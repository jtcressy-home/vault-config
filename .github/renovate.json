{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "depTypes": [
    "text"
  ],
  "schedule": [
    {
      "interval": "daily",
      "timezone": "UTC"
    }
  ],
  "text": {
    "matchStrings": ["VERSION_STRING"],
    "fileMatch": ["path/to/your/textfile.txt"],
    "versioning": "github-releases",
    "branchPrefix": "renovate/",
    "branchName": "renovate/VERSION_STRING",
    "githubRelease": {
      "repo": "my-github-username/my-github-repo"
    },
    "major": "x",
    "minor": "y",
    "patch": "z",
    "schedule": {
      "interval": "daily",
      "timezone": "UTC"
    }
  }
}

